<div class="blog-item">
    {% set blog_img = file_url(node.field_blog_image.entity.field_media_image.entity.fileuri) %}
    <div class="blog-item-pic set-bg" data-setbg="{{ blog_img }}" style="background-image: url({{blog_img}});"></div>
    <div class="blog-item-text">
        <span class="d-block">
            <i class="fa fa-calendar-minus-o" aria-hidden="true"></i>
            {% if display_submitted %} {{ node.createdtime | date("d F Y") }} {% endif %}
        </span>
        <h5>{{ label }}</h5>
        <a href="{{ url }}">Read More</a>
    </div>
</div>